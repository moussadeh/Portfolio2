{# HERO  #}
<section class="bg-secondary hero">
    <div class="container lg:flex-row lg:items-center relative z-10">
        {# <div class="custom-bg-hero"></div> #}
        <div class="customIcon__grid-big left-1/2 top-20 lg:left-56 lg:top-32 xl:left-80 xl:top-48" aria-hidden="true">
            {% for i in 1..25 %}
                <span class="item"></span>
            {% endfor %}
        </div>
        {% set baseImgProfil = './assets/img/profil/pierrepineau' %}
        <picture class="hero__img-container await-loading">
            <source srcset="{{asset(baseImgProfil ~ '-sm.webp')}} 100w,
                            {{asset(baseImgProfil ~ '-md.webp')}} 250w,
                            {{asset(baseImgProfil ~ '-lg.webp')}} 350w" type="image/webp">
            <source srcset="{{asset(baseImgProfil ~ '-sm.png')}} 100w,
                            {{asset(baseImgProfil ~ '-md.png')}} 250w,
                            {{asset(baseImgProfil ~ '-lg.png')}} 350w" type="image/png">
            <img src="{{asset(baseImgProfil ~ '-sm.png')}}" alt="Photo de {{SITE_NAME}}" class="hero__img" lazy->
        </picture>
        <div class="titles py-8 !text-center md:!text-left !items-center md:!items-start">
            <div class="relative lg:mb-4">
                <h1 class="!text-primary title__h1 flex flex-col">
                    <span class="text-4xl text-white">{{SITE_NAME}}</span>
                    <span class="">{{"hero.title"|trans}}</span>
                </h1>
            </div>
            <p class="">{{"hero.content"|trans|raw}}</p>
            <div class="flex gap-4 items-center">
                <a href="#contact" class="btn-white">{{"contact.title"|trans}}</a>
                <a href="#realisations" class="link-primary">{{"btn.seeRealisations"|trans}}</a>
            </div>
        </div>
    </div>
    <div class="overflow-hidden w-12 md:w-auto absolute bottom-0 right-0 md:right-12 translate-y-1/2"  aria-hidden="true">
        <div class="customIcon__grid-tight !relative" aria-hidden="true">
            {% for i in 1..25 %}
                <span class="item"></span>
            {% endfor %}
        </div>
    </div>
    
</section>
{# END HERO #}