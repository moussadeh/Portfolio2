{# SPÉCIALISATION #}
<section id="competences" class="layout-padding relative">
    <div class="customIcon-container left-0 top-12 w-60 hidden md:flex justify-end" aria-hidden="true">
        <div class="customIcon__circle !w-96 !h-96" ></div>
    </div>
    <div class="container gap-4 md:gap-8 relative z-10">
        <div class="titles titles-right">
            <div class="custom-line-right titles__header js-title-move">
                <h2 class="title__h2">{{"specialties.title"|trans}}</h2>
            </div>
            <p class="lg:w-2/3">{{"specialties.content"|trans}}</p>
        </div>
        <ul class="grid md:grid-cols-2 gap-x-4 gap-y-2 md:gap-y-4 md:gap-x-8">
            {% for specialtie in specialties %}
                <li class="card !items-start" tabindex="0" aria-label="{{specialtie.name}}">
                    <span class="card__name text-primary"><i class="{{specialtie.icon}} icon"></i></span>
                    <h3 class="title__h3 mb-4">{{specialtie.name}}</h3>
                    <p class="text-light">{{specialtie.content}}</p>
                </li>
            {% endfor %}
        </ul>
    </div>
    <ul class="list-h gap-4 mt-8 justify-center px-4 relative z-10">
        {% for skill in skills %}
            <li class="skill__item" tabindex="0" aria-label="{{skill.name}} - {{skill.value}}%">
                <div class="flex gap-4 items-center">
                    <i class="{{skill.icon}}"></i>
                    <h3 class="skill__name">{{skill.name}}</h3>
                </div>
                    <div class="skill__progress">
                        <div class="skill__progress-bar" style="width: {{skill.value}}%" role="progressbar" aria-valuenow="{{skill.value}}" aria-valuemin="0" aria-valuemax="100" aria-valuetext="{{skill.name}} - {{skill.value}}%" aria-label="{{skill.name}} - {{skill.value}}%"></div>
                    </div>
            </li>
        {% endfor %}
    </ul>
    <div class="flex overflow-hidden w-32 absolute right-0 top-1/2 2xl:right-1/3 2xl:w-auto 2xl:translate-x-[500px]"  aria-hidden="true">
        <div class="customIcon__grid-big !relative" aria-hidden="true">
            {% for i in 1..25 %}
                <span class="item"></span>
            {% endfor %}
        </div>
    </div>
</section>
{# SPÉCIALISATION #}