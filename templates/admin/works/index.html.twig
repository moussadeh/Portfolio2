{% extends "@EasyAdmin/page/content.html.twig" %}
{% block content_title %}Works{% endblock %}

{% set actionName = 'works' %}
{% block page_actions %}
    <a class="btn btn-primary" href="{{path('admin_works_new')}}">New</a>
{% endblock %}

{% block main %}
    <table class="datagrid">
        <thead>
            <tr>
                <td>code</td>
                <td>name</td>
                <td>type</td>
                <td>Action</td>
            </tr>
        </thead>
        <tbody>
            {% for data in works %}
                <tr>
                    <td>{{ data.code ?? "" }}</td>
                    <td>{{ data.name ?? "" }}</td>
                    <td>{{ data.type ?? "" }}</td>
                    <td>
                        <a class="btn btn-secondary" href="{{path('admin_works_edit', {'id': data.id})}}"><i class="fa-solid fa-pen"></i></a>
                        <a class="btn btn-danger" href="{{path('admin_works_delete', {'id': data.id})}}"><i class="fa-solid fa-trash"></i></a>
                    </td>
                </tr>   
            {% endfor %}
        </tbody>
    </table>
{% endblock %}