<form action="{{ formAction }}" method="POST" class="mb-3">
    <div class="mb-3">
        <label for="position" class="form-label">Position</label>
        <input type="number" name="position" id="position" class="form-control bg-transparent" required value="{{skills.position ?? ''}}">
    </div>
    <div class="mb-3">
        <label for="name" class="form-label">Name</label>
        <input type="text" name="name" id="name" class="form-control bg-transparent" required value="{{skills.name ?? ''}}">
    </div>
    <div class="mb-3">
        <label for="icon" class="form-label">Icon</label>
        <input type="text" name="icon" id="icon" class="form-control bg-transparent" required value="{{skills.icon ?? ''}}">
    </div>
    <div class="mb-3">
        <label for="percent" class="form-label">Pourcentage</label>
        <input type="number" name="percent" id="percent" class="form-control bg-transparent" required value="{{skills.percent ?? ''}}">
    </div>
    <button type="submit" class="btn btn-primary">{{btn}}</button>
</form>