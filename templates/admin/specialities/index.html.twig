{% extends "@EasyAdmin/page/content.html.twig" %}
{% block content_title %}Spécialités{% endblock %}

{% set actionName = 'specialities' %}
{% block page_actions %}
    <a class="btn btn-primary" href="{{path('admin_specialities_new')}}">New</a>
{% endblock %}

{% block main %}
    <table class="datagrid">
        <thead>
            <tr>
                <td>position</td>
                <td>icon</td>
                <td>name</td>
                <td>Action</td>
            </tr>
        </thead>
        <tbody>
            {% for data in specialities %}
                <tr>
                    <td>{{ data.position ?? "" }}</td>
                    <td>{{ data.icon ?? "" }}</td>
                    <td>{{ data.name ?? "" }}</td>
                    <td>
                        <a class="btn btn-secondary" href="{{path('admin_specialities_edit', {'id': data.id})}}"><i class="fa-solid fa-pen"></i></a>
                        <a class="btn btn-danger" href="{{path('admin_specialities_delete', {'id': data.id})}}"><i class="fa-solid fa-trash"></i></a>
                    </td>
                </tr>   
            {% endfor %}
        </tbody>
    </table>
{% endblock %}