{% extends "@EasyAdmin/page/content.html.twig" %}
{% block content_title %}Skills{% endblock %}

{% set actionName = 'skills' %}
{% block page_actions %}
    <a class="btn btn-primary" href="{{path('admin_skills_new')}}">New</a>
{% endblock %}

{% block main %}
    <table class="datagrid">
        <thead>
            <tr>
                <td>Name</td>
                <td>Position</td>
                <td>Icon</td>
                <td>Pourcentage</td>
                <td>Action</td>
            </tr>
        </thead>
        <tbody>
            {% for data in skills %}
                <tr>
                    <td>{{ data.name ?? "" }}</td>
                    <td>{{ data.position ?? "" }}</td>
                    <td>{{ data.icon ?? "" }}</td>
                    <td>{{ data.percent ?? "" }}</td>
                    <td>
                        <a class="btn btn-secondary" href="{{path('admin_skills_edit', {'id': data.id})}}"><i class="fa-solid fa-pen"></i></a>
                        <a class="btn btn-danger" href="{{path('admin_skills_delete', {'id': data.id})}}"><i class="fa-solid fa-trash"></i></a>
                    </td>
                </tr>   
            {% endfor %}
        </tbody>
    </table>
{% endblock %}