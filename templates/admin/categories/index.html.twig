{% extends "@EasyAdmin/page/content.html.twig" %}
{% block content_title %}Cat√©gories{% endblock %}

{% set actionName = 'categories' %}
{% block page_actions %}
    <a class="btn btn-primary" href="{{path('admin_categories_new')}}">New</a>
{% endblock %}

{% block main %}
    <table class="datagrid">
        <thead>
            <tr>
                <td>Code</td>
                <td>Name</td>
                <td>Action</td>
            </tr>
        </thead>
        <tbody>
            {% for data in categories %}
                <tr>
                    <td>{{ data.code ?? "" }}</td>
                    <td>{{ data.name ?? "" }}</td>
                    <td>
                        <a class="btn btn-danger" href="{{path('admin_categories_delete', {'id': data.id})}}"><i class="fa-solid fa-trash"></i></a>
                    </td>
                </tr>   
            {% endfor %}
        </tbody>
    </table>
{% endblock %}